<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        tools:context=".Create_Account_Activity">

        <TextView
            android:id="@+id/txt_mastering_emotions"
            android:layout_width="146dp"
            android:layout_height="20sp"
            android:layout_marginStart="120sp"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:text="Mastering Emotions"
            android:textSize="15sp"></TextView>

        <EditText
            android:id="@+id/editText"
            android:layout_width="332sp"
            android:layout_height="45sp"
            android:layout_below="@id/txt_mastering_emotions"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_background"
            android:hint="PRENUME"
            android:paddingLeft="10dp"
            android:textSize="15dp">

        </EditText>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="332sp"
            android:layout_height="40sp"
            android:layout_below="@id/editText"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="NUME"
            android:paddingLeft="10dp"
            android:textColor="#606060"
            android:textSize="15dp"></EditText>

        <TextView
            android:id="@+id/text1"
            android:layout_width="97sp"
            android:layout_height="19sp"
            android:layout_below="@id/editText2"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="TITULATURA"
            android:textColor="#000000"
            android:textSize="15dp">

        </TextView>


        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:orientation="horizontal"

            >

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="90sp"
                    android:layout_height="29sp"
                    android:layout_below="@id/text1"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="Domnul"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="93sp"
                    android:layout_height="29sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="Doamna"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="128sp"
                    android:layout_height="29sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="Nu menționez"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/text5"
            android:layout_width="62sp"
            android:layout_height="19sp"
            android:layout_below="@id/linear_layout"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="VARTSA"
            android:textColor="#000000"
            android:textSize="15dp">

        </TextView>

        <LinearLayout
            android:id="@+id/linear_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text5"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="77sp"
                    android:layout_height="26sp"
                    android:layout_below="@id/text1"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="18-30"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="77sp"
                    android:layout_height="26sp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="31-40"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="77sp"
                    android:layout_height="26sp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="41-50"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout2"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="77sp"
                    android:layout_height="26sp"
                    android:layout_below="@id/text1"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="51-60"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/text10"
                    android:layout_width="60sp"
                    android:layout_height="26sp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/customz_backgraound_txt"
                    android:gravity="center"
                    android:text="60+"
                    android:textColor="#000000"
                    android:textSize="12dp">

                </TextView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout3"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/text12"
                    android:layout_width="108sp"
                    android:layout_height="13sp"
                    android:layout_below="@id/editText2"
                    android:gravity="center"
                    android:text="Varsta minima 18 ani"
                    android:textColor="#707070"
                    android:textSize="10dp">

                </TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="332sp"
            android:layout_height="40sp"
            android:layout_below="@id/linear_layout4"
            android:layout_marginStart="50dp"
            android:hint="EMAIL"
            android:paddingLeft="10dp"
            android:textColor="#606060"
            android:textSize="15dp"></EditText>

        <LinearLayout
            android:id="@+id/linear_layout5"
            android:layout_width="269dp"
            android:layout_height="20dp"
            android:layout_below="@id/editText3"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/ic_crope_square"
                    android:gravity="center">

                </TextView>

                <TextView
                    android:layout_width="246dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text="Sunt de acord să primesc email-uri informative"
                    android:textSize="10dp"></TextView>
        </LinearLayout>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="332sp"
            android:layout_height="40sp"
            android:layout_below="@id/linear_layout5"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:hint="Parolă"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#606060"
            android:textSize="15dp"></EditText>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="332sp"
            android:layout_height="40sp"
            android:layout_below="@id/editText4"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Repeta parolă"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#606060"
            android:textSize="15dp"></EditText>

        <LinearLayout
            android:id="@+id/linear_layout6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/editText5"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/ic_crope_square"
                    android:gravity="center">

                </TextView>

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="92dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text="Sunt de acord cu"
                    android:textSize="10dp"></TextView>

                <TextView
                    android:id="@+id/text14"
                    android:layout_width="169dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FEFFFF"
                    android:text="Termeni și Condiții"
                    android:textSize="18dp"></TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/text15"
            android:layout_width="169dp"
            android:layout_height="20dp"
            android:layout_below="@id/linear_layout6"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Perioadă gratuită 10 zile"
            android:textColor="#707070"
            android:textSize="10dp"></TextView>
       <LinearLayout
           android:id="@+id/linear_layout7"
           android:layout_width="61.46dp"
           android:layout_height="60.34dp"
           android:layout_below="@id/text15"
           android:layout_marginTop="10dp"
           android:layout_marginStart="180dp"
           android:gravity="center">
               <ImageView
                   android:id="@+id/image_next"
                   android:layout_width="61.46dp"
                   android:layout_height="60.34dp"
                   android:layout_gravity="center"
                   android:src="@drawable/nextimage"></ImageView>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/linear_layout7"
            android:layout_marginStart="350dp"
            android:gravity="center">

                <ImageView
                    android:id="@+id/image_me"
                    android:layout_width="28.46dp"
                    android:layout_height="28.34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/me"></ImageView>
        </LinearLayout>
</RelativeLayout>